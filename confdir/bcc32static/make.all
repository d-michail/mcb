#------------------------------------------------------------------------------
# file : Makefile
#------------------------------------------------------------------------------


!include confdir\bcc32static\make.lst.src

MAKE=make

#------------------------------------------------------------------------------
# Libraries & Programs
#------------------------------------------------------------------------------

all: lib Test Demo

#------------------------------------------------------------------------------
# Libraries
#------------------------------------------------------------------------------

lib:
        @cd src
	$(MAKE) -i
        @cd ..

touch:
        @cd src 
        $(MAKE) -i touch
	@cd ..

#------------------------------------------------------------------------------
# Demos
#------------------------------------------------------------------------------

Demo:
        @cd demo
        $(MAKE) -i
        @cd ..

#------------------------------------------------------------------------------
# Test programs
#------------------------------------------------------------------------------

Test:
        @cd test
        $(MAKE) -i
        @cd ..

#------------------------------------------------------------------------------
# Reorganinzation and cleaning up 
#------------------------------------------------------------------------------

allclean: clean
        @cd src
        $(MAKE) -i del
        @cd ..\demo
        $(MAKE) -i del
        @cd ..\test
        $(MAKE) -i del
        @cd ..
        del lib$(LEPNAME).lib

clean:
        @cd demo
        $(MAKE) -i clean
        @cd ..\test
        $(MAKE) -i clean
        @cd ..\src
        $(MAKE) -i clean
        @cd ..


